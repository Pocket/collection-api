{
  "name": "collection-api",
  "main": "dist/main.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "watch": "tsc -w & nodemon",
    "start": "npm run migrate:deploy && node dist/main.js",
    "start:dev": "npm run migrate:deploy && npm run build && npm run watch",
    "test-ci": "npm test",
    "test": "jest \"\\.spec\\.ts\"",
    "test-integrations": "jest \"\\.integration\\.ts\" --runInBand",
    "lint-check": "eslint --fix-dry-run \"src/**/*.ts\"",
    "lint-fix": "eslint --fix \"src/**/*.ts\"",
    "db:generate-client": "prisma generate",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset"
  },
  "prisma": {
    "seed": "ts-node --emit=false prisma/seed.ts"
  },
  "dependencies": {
    "@apollo/federation": "^0.33.8",
    "@pocket-tools/apollo-utils": "^2.1.0",
    "@prisma/client": "^3.3.0",
    "@sentry/node": "^6.16.1",
    "@sentry/tracing": "^6.15.0",
    "apollo-server": "^3.4.1",
    "apollo-server-cache-redis": "^3.3.0",
    "apollo-server-express": "^3.4.1",
    "apollo-server-plugin-response-cache": "^3.3.0",
    "aws-sdk": "^2.1052.0",
    "aws-xray-sdk-core": "^3.3.4",
    "aws-xray-sdk-express": "^3.3.4",
    "graphql": "^15.8.0",
    "graphql-upload": "^13.0.0",
    "mime-types": "^2.1.34",
    "slugify": "^1.6.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/faker": "^5.5.9",
    "@types/graphql-upload": "^8.0.8",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.19",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "chai": "^4.3.4",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "faker": "^5.5.3",
    "jest": "^27.4.7",
    "nock": "^13.2.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "prisma": "^3.3.0",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
